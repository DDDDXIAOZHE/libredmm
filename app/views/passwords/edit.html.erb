<div id="clearance" class="password-reset">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password_reset,
        url: user_password_path(@user, token: @user.confirmation_token),
        html: { method: :put, class: 'pt-3' } do |form| %>
    <%= render partial: '/users/password_field', locals: { form: form, allow_forgot: false } %>
    <%= render partial: '/users/submit_field', locals: { form: form } %>
  <% end %>
</div>

<nav class="card mb-3">
  <div class="card-body">
    <section>
      <% if signed_in? %>
        <div class="btn-toolbar mb-3">
          <div id="voteNav" class="btn-group" role="group">
            <% { all: 'All', up: 'Upvoted', down: 'Downvoted', bookmark: 'Bookmarked', none: 'Not Voted' }.each do |vote, text| %>
              <%= link_to(
                text,
                request.params.merge(vote: vote),
                class: (@vote == vote.to_s ? 'btn btn-primary active' : 'btn btn-secondary'),
                role: 'button',
              ) %>
            <% end %>
          </div>
        </div>

        <% if current_user.is_admin? %>
          <div class="btn-toolbar mb-3">
            <div id="baiduPanResourceNav" class="btn-group mr-2" role="group">
              <button type="button" class="btn btn-outline-dark" disabled>Baidu Pan Resource</button>
              <% { with: 'With', without: 'Without', any: 'Any' }.each do |value, text| %>
                <%= link_to(
                  text,
                  request.params.merge(baidu_pan_resource: value),
                  class: (@baidu_pan_resource == value.to_s ? 'btn btn-primary active' : 'btn btn-secondary'),
                  role: 'button',
                ) %>
              <% end %>
            </div>

            <div id="btResourceNav" class="btn-group mr-2" role="group">
              <button type="button" class="btn btn-outline-dark" disabled>BT Resource</button>
              <% { with: 'With', without: 'Without', any: 'Any' }.each do |value, text| %>
                <%= link_to(
                  text,
                  request.params.merge(bt_resource: value),
                  class: (@bt_resource == value.to_s ? 'btn btn-primary active' : 'btn btn-secondary'),
                  role: 'button',
                ) %>
              <% end %>
            </div>

            <div id="orderNav" class="btn-group" role="group">
              <button type="button" class="btn btn-outline-dark" disabled>Order</button>
              <% { default: 'Default', latest: 'Latest First', oldest: 'Oldest First' }.each do |order, text| %>
                <%= link_to(
                  text,
                  request.params.merge(order: order),
                  class: (@order == order.to_s ? 'btn btn-primary active' : 'btn btn-secondary'),
                  role: 'button',
                ) %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </section>

    <%= form_tag movies_url, method: :get, class: 'form-inline' do %>
      <input name="vote" type="hidden" value="<%= @vote %>" />
      <input name="resource" type="hidden" value="<%= @resource %>" />
      <div class="input-group">
        <%= text_field_tag('fuzzy', params[:fuzzy], class: 'form-control') %>
        <div class="input-group-append">
          <%= submit_tag 'Fuzzy Match', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</nav>

<% if @movies.exists? %>
  <%= render partial: '/movies/pager', object: @movies %>

  <% @movies.in_groups_of(4).each do |group| %>
    <div class="movies card-deck mb-3">
      <% group.each do |movie| %>
        <% if movie %>
          <div class="movie card">
            <%= link_to image_tag(movie.cover_image, class: "card-image-top img-fluid"), movie%>
            <div class="card-body">
              <%= link_to movie, class: 'card-title' do %>
                <span><%= movie.code %></span>
                <span><%= movie.title %></span>
              <% end %>
              <% if movie.actresses %>
                <p class="mb-0">
                  <% movie.actresses.each do |actress| %>
                    <span class="badge"><%= actress %></span>
                  <% end %>
                </p>
              <% end %>
            </div>
            <div class="card-footer text-right">
              <%= render partial: '/movies/voter', locals: { movie: movie, height: nil } %>
            </div>
          </div>
        <% else %>
          <div class="card"></div>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= render partial: '/movies/pager', object: @movies %>
<% else %>
  <div class="jumbotron">
    <p>No movie matching given criterias</p>
  </div>
<% end %>
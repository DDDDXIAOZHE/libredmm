<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Actresses</th>
      <th>Actress types</th>
      <th>Categories</th>
      <th>Code</th>
      <th>Cover image</th>
      <th>Description</th>
      <th>Directors</th>
      <th>Genres</th>
      <th>Label</th>
      <th>Maker</th>
      <th>Movie length</th>
      <th>Page</th>
      <th>Release date</th>
      <th>Sample images</th>
      <th>Series</th>
      <th>Tags</th>
      <th>Thumbnail image</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.actresses %></td>
        <td><%= movie.actress_types %></td>
        <td><%= movie.categories %></td>
        <td><%= movie.code %></td>
        <td><%= movie.cover_image %></td>
        <td><%= movie.description %></td>
        <td><%= movie.directors %></td>
        <td><%= movie.genres %></td>
        <td><%= movie.label %></td>
        <td><%= movie.maker %></td>
        <td><%= movie.movie_length %></td>
        <td><%= movie.page %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.sample_images %></td>
        <td><%= movie.series %></td>
        <td><%= movie.tags %></td>
        <td><%= movie.thumbnail_image %></td>
        <td><%= movie.title %></td>
        <td><%= link_to 'Show', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="clearance" class="sign-in">
  <h2><%= t(".title") %></h2>

  <%= form_for :session, url: session_path, html: { class: 'pt-3' } do |form| %>
    <%= render partial: '/users/email_field', locals: { form: form } %>
    <%= render partial: '/users/password_field', locals: { form: form, allow_forgot: true } %>
    <%= render partial: '/users/submit_field', locals: { form: form } %>

    <div class="form-group other-links">
      Don't have an account?
      <% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, class: 'btn btn-info ml-2' %>
      <% end %>
    </div>
  <% end %>
</div>
